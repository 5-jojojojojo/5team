<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_detail_dialog_image_Layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/video_detail_dialog_image_Layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            >
        <ImageView
            android:id="@+id/video_detail_dialog_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_video_detail_dummyimage"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/video_detail_dialog_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="제목이 들어갈 구역입니다"
            app:layout_constraintTop_toBottomOf="@id/video_detail_dialog_image_Layout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/video_detail_dialog_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="여러가지 \n 텍스트들 \n 입니다네네 \n 나중에 데이터를 받아서 \n 추가할 예정입니다. \n 화이팅~~!~!~!!"
        app:layout_constraintTop_toBottomOf="@id/video_detail_dialog_image_Layout" />

</androidx.constraintlayout.widget.ConstraintLayout>