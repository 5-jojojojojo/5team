<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    tools:context=".fragment.videodetailfragment.VideoDetail">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/video_detail_fbtmain"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorTransparent"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_video_detail_more_vert"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabCustomSize="30dp"
        app:maxImageSize="30dp"
        app:elevation="0dp"
        app:rippleColor="@color/colorTransparent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/video_detail_fbt1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:background="@color/colorTransparent"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_video_detail_infomation"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorTransparent"
        app:fabCustomSize="30dp"
        app:maxImageSize="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/video_detail_fbt2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="110dp"
        android:background="@color/colorTransparent"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_video_detail_share_false"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorTransparent"
        app:fabCustomSize="30dp"
        app:maxImageSize="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/video_detail_fbt3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="150dp"
        android:background="@color/colorTransparent"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_video_detail_dislike_false"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorTransparent"
        app:fabCustomSize="30dp"
        app:maxImageSize="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/video_detail_fbt4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="190dp"
        android:background="@color/colorTransparent"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_video_detail_like_false"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorTransparent"
        app:fabCustomSize="30dp"
        app:maxImageSize="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>